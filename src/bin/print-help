#!/usr/bin/env bash

echo ""
echo -e "\033[1mSYNOPSIS\033[0m"
echo -e "\tmake [COMMAND]"
echo ""
echo -e "\033[1mDESCRIPTION\033[0m"
echo -e "\tRun actions on the code base."
echo ""
echo -e "\tCOMMAND determines the action to run:"
echo ""
echo -e "\tbuild\tbuild the service"
echo ""
echo -e "\tci\truns all ci steps for the service"
echo ""
echo -e "\tclean\tcleans all build artificats of the service"
echo ""
echo -e "\tlint\tlints the service"
echo ""
echo -e "\trun\truns the service"
echo ""
echo -e "\ttest\truns all tests of the provided context"
echo ""
echo -e "\033[1mEXAMPLES\033[0m"
echo ""
echo -e "\tRun all tests"
echo ""
echo -e "\t\t$ make ci"
echo ""
echo -e "\tBuild service"
echo ""
echo -e "\t\t$ make build"